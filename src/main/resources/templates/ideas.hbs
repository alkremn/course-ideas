{{#partial "content"}}
    <h1>Current Ideas</h1>

    <ul>
        {{#each ideas}}
            <li>{{ title }}</li>
        {{/each}}
    </ul>
    <form action="/ideas" method="post">
        <input type="text" name="title" placeholder="What is your idea? ">
        <button>Suggest!</button>
    </form>
{{/partial}}

{{>base.hbs}}